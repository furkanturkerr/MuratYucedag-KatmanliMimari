@model WebApplication1.Entity.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Yeni Müşteri Ekleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Müşteri Adı</label>
        <input type="text" class="form-control" name="Name" value="@Model?.Name" />
        @if (ViewBag.NameError != null)
        {
            <div class="text-danger">@ViewBag.NameError</div>
        }
    </div>
    
    <div class="form-group">
        <label>Şehir</label>
        <input type="text" class="form-control" name="City" value="@Model?.City" />
        @if (ViewBag.CityError != null)
        {
            <div class="text-danger">@ViewBag.CityError</div>
        }
    </div>
    
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
