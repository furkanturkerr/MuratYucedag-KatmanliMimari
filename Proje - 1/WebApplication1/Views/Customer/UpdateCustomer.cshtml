@model WebApplication1.Entity.Customer?

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Güncelleme Sayfası</h1>

<form method="post">
    @Html.Label("Müşteri İd")
    @Html.TextBoxFor(x => x.Id, new {@class = "form-control"})
    <br/>
    @Html.Label("Müsteri Adı")
    @Html.TextBoxFor(X => X.Name, new { @class = "form-control" })
    <br/>
    @Html.Label("Müşteri Şehri")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br/>
    <button class="btn btn-primary">Güncelle</button>
</form>

