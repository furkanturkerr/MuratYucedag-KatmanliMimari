@using EntityLayer
@model List<EntityLayer.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayoult.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehri</th>
        <th>Meslek</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@(item.Job?.Name ?? "Belirtilmemiş")</td>
            <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger" onclick="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz?')">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>