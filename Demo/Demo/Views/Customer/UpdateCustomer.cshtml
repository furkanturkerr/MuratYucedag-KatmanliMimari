@model EntityLayer.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayoult.cshtml";
}

<h1>Ürün Güncelle</h1>

<form method="post">
    @Html.HiddenFor(x => x.Id)
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br/>
    @Html.Label("Müşteri Şehri")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.City)
    <br/>
    @Html.Label("Müşteri Mesleği")
    @Html.DropDownListFor(X => X.JobId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br/>
    <button class="btn btn-success">Güncelle</button>
</form>